{
  "compilerOptions": {
    "incremental": true,
    "baseUrl": "./src", // Use src as the base for imports
    "paths": {
      "*": ["*", "../dist/*"] // Resolve modules in src and fallback to dist
    },
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*", "**/*.ts", "src/geminiAI/prueba_conexion.js", "jest.config.js", "babel.config.js","src/**/*.test.ts", "jest.config.mjs"],
  "exclude": ["node_modules","dist"]
}
